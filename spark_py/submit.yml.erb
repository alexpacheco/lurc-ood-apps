---
batch_connect:
  template: "basic"
  set_host: "host=$(hostname)"
script:
  queue_name: <%= custom_queue %>
  native: # ... array of command line arguments ...
    - "--nodes=<%= bc_num_slots %>"
    - "--ntasks-per-node=1"
    - "--cpus-per-task=<%= num_cores %>"
    <%- if gpus > "0" -%>
    - "--gres=gpu:<%= gpus %>"
    <%- end -%>
